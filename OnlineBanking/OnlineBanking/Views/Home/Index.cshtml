@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/image7.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Create your own EXPENSE profile!!
                    
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/image4.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Track your SPENDINGS!!
                    
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/image5.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Save all your ACCOUNTS!!
                    
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">    
    <div>
        <h2>Online Expense Manager</h2>
        <ul>
            <li>Create your own profile</li>
            <li>List your accounts</li>
            <li>Create your desired spending category</li>
            <li>Set your budget for each spending category</li>
            <li>Save your transactions</li>
            <li>Track your expenses and manage your budget</li>

        </ul>
    </div>
</div>
