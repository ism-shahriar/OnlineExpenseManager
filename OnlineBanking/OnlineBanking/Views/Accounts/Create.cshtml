@model OnlineBanking.Models.Account

@{
    ViewData["Title"] = "Create";
}

<h2>Creating New Account</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <input asp-for="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountType" class="control-label"></label>
                <select asp-for="AccountType" class="form-control">
                    <option value="Saving">Saving Acccount</option>
                    <option value="Chequing">Chequing Acccount</option>
                    <option value="TFSA">Tax Free Saving Acccount</option>
                    <option value="RRSP">Retirement Saving Plan</option>
                    <option value="RESP">Education Saving Plan</option>
                    <option value="CC">Credit Card</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="OpenDate" class="control-label"></label>
                <input asp-for="OpenDate" class="form-control" />
                <span asp-validation-for="OpenDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <select asp-for="ClientId" class="form-control" 
                    asp-items="@(new SelectList(ViewBag.Clients, "ClientId", "FirstName"))">
                </select>
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
