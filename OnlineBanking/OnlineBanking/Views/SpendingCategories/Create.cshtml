@model OnlineBanking.Models.SpendingCategory

@{
    ViewData["Title"] = "Create";
}

<h2>Creating Spending Category</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryType" class="control-label"></label>
                <select asp-for="CategoryType" class="form-control">
                    <option value="Coffee">Coffee Shop</option>
                    <option value="Pizza">Pizza</option>
                    <option value="Apparel">Clothing Store</option>
                    <option value="Beauty">Hair Saloon</option>
                    <option value="Ice Cream">Ice Cream Shop</option>
                    <option value="Grocery">Grocery Store</option>


                </select>                
            </div>
            <div class="form-group">
                <label asp-for="CategoryDetails" class="control-label"></label>
                <input asp-for="CategoryDetails" class="form-control" />
                <span asp-validation-for="CategoryDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
